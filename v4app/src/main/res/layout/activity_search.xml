<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryVariant"
    android:fitsSystemWindows="true"
    tools:context=".activity.SearchActivity">

    <tech.minesoft.minetv.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/widget_margin_2x"
        android:layout_marginHorizontal="@dimen/widget_margin_2x"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/widget_margin_2x"
        android:layout_marginHorizontal="@dimen/widget_margin_2x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="@dimen/search_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginEnd="@dimen/btn_space"
            android:ems="10"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/white"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no" />

<!--        <tech.minesoft.minetv.widget.IconButton-->
<!--            android:id="@+id/search_btn"-->
<!--            android:layout_width="@dimen/btn_width"-->
<!--            android:layout_height="@dimen/btn_height"-->
<!--            app:srcCompat="@drawable/icon_search" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <include
        android:id="@+id/content"
        layout="@layout/search_scrolling" />

</LinearLayout>
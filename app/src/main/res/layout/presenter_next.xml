<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="146dp">

    <tech.minesoft.minetv.widget.ScaleConstraintLayout
            android:id="@+id/cl_prev"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            app:scale_mode="ZOOM_FACTOR_MEDIUM"
            android:background="@drawable/selector_focus_bg_corner15_without_default_bg"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cl_next"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/prev_page"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_m"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </tech.minesoft.minetv.widget.ScaleConstraintLayout>

    <tech.minesoft.minetv.widget.ScaleConstraintLayout
            android:id="@+id/cl_next"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            app:scale_mode="ZOOM_FACTOR_MEDIUM"
            android:background="@drawable/selector_focus_bg_corner15_without_default_bg"
            app:layout_constraintLeft_toRightOf="@+id/cl_prev"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cl_prev">

        <TextView
                android:id="@+id/tv_look_around"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/next_page"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_m"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </tech.minesoft.minetv.widget.ScaleConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>